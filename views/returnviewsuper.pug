extends layout

block content
  section
      if result && result.num_rows > 0
        h2 Returns
        table.tables(border='1')
          tr
            th Borrower's ID
            th Comment
            th Date/Time of Return

          each row in result
            tr
              td= row.borrow_id
              td= row.comments
              td= row.return_date

      else
        | No data available.

      input.styled-button(type="button", onclick="window.location.href='returnFormsuper.php'", value="Return Projector")

