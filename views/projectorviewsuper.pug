extends layout

block content
    section
      if result && result.num_rows > 0
        h2 Projectors
        table.tables(border='1')
          tr
            th Model
            th Condition
            th Serial Number
            th Colour
            th Action

          each row in result
            tr
              td= row.Model
              td= row.Conditions
              td= row.SerialNumber
              td= row.Colour
              td
                button.edit-btn(onclick=`editRecord(${row.id})`) Edit
                button.delete-btn(onclick=`deleteRecord(${row.id})`) Delete

      else
        | No data available.

      input.styled-button(type="button", onclick="window.location.href='projectorsFormsuper.php'", value="Register Projector")

  footer
    p &copy; 2023 DragoApps. All rights reserved.

  script.
    function editRecord(recordId) {
      window.location.href = 'editprosuper.php?id=' + recordId;
    }

    function deleteRecord(recordId) {
      if (confirm('Are you sure you want to delete this record?')) {
        window.location.href = 'deleteprosuper.php?id=' + recordId;
      }
    }
