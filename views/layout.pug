      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #2ecc71;
        color: #333; /* Text color */
      }
      body::before {
        content: '';
        display: block;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.9); /* Adjust the alpha value for transparency */
        z-index: -1; /* Place the overlay behind other elements */
      }
      form {
        max-width: 400px;
        margin: 50px auto;
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
      }
      label {
        display: block;
        margin-bottom: 8px;
        color: #3498db;
      }

      input[type="text"],
      input[type="email"],
      input[type="password"]{
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        box-sizing: border-box;
        transition: border-color 0.3s, box-shadow 0.3s;
        border: 2px solid #3498db;
        border-radius: 4px;
      }
      /* Style focused input field */
      input[type="text"]:focus,
      input[type="email"]:focus,
      input[type="password"]:focus {
        border-color: #2196F3;
        box-shadow: 0 0 10px rgba(33, 150, 243, 0.5);
      }

      input[type="submit"] {
        background-color: #3498db;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
      }

      input[type="submit"].success {
        background-color: #2196F3;
      }

      input[type="submit"]:hover {
        background-color: #2980b9;
      }

      h2 {
        color: #3498db;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
        text-align: center;
      }

      h2::after {
        content: "";
        display: block;
        width: 50px;
        height: 3px;
        background-color: #3498db;
        margin: 10px auto;
      }

      header {
        background-color: #3498db;
        color: #fff;
        padding: 20px;
        text-align: center;
      }

      .dashboard-container {
        display: flex;
        justify-content: space-around;
        margin: 20px;
      }

      .dashboard-item {
        width: 30%;
        color: #fff;
        padding: 20px;
        margin: 10px;
        box-sizing: border-box;
        border: 1px solid #fff;
        border-radius: 5px;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        background-size: cover;
        background-color: #F9E79F;
      }

      .dashboard-item:hover {
        transform: scale(1.05);
        box-shadow: 0 0 10px #ffd700;
      }

      .dashboard-item.item1 {
        background-image: url('C:\\xampp\\htdocs898259.jpg');
      }

      .dashboard-item.item2 {
        background-image: url('C:\\xampp\\htdocs1613340.jpg');
      }

      .dashboard-item.item3 {
        background-image: url('C:\\xampp\\htdocs1613537.jpg');
      }

      footer {
        background-color: #3498db;
         color: #fff;
        padding: 10px;
        text-align: center;
      }

      nav a.ide {
        float: right;
      }

      a .view {
        float: right;
      }

      .styled-button {
        display: inline-block;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        border: 2px solid #3498db;
        color: #3498db;
        border-radius: 5px;
        background-color: transparent;
        margin-left: 182px;
      }

      .styled-button:hover {
        background-color: #3498db;
        color: #fff;
      }

      @media only screen and (max-width: 600px) {
      nav a {
        float: none;
        display: block;
        width: 100%;
        text-align: left;
        box-sizing: border-box;
      }

      a {
        text-decoration: none;
        color: black;
        align: center;
      }
      }
      /* Style the unordered list */
      ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
      }

      li {
        background-color: #3498db;
        color: #fff;
        padding: 10px;
        margin: 5px 0;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
      }


      li:hover {
        background-color: #2980b9;
      }
